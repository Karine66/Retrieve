<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="7dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="#B2DFDB"
    app:cardCornerRadius="10dp">

  <RelativeLayout
        android:id="@+id/fragment_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/list_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="homePhoto"
            android:scaleType="center" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/typeObject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/list_photo"
            android:textAllCaps="true"
            android:textColor="#304FFE"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textStyle="bold|italic" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typeObject"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="italic" />


  </RelativeLayout>

</com.google.android.material.card.MaterialCardView>